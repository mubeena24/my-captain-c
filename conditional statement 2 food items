#include<stdio.h>
int main()
{
int a=0;
printf("pick any number between 1-5 for the display of items\n");
scanf("%d",&a);
switch(a)
{
case 1:
printf("food item- french fries\n");
printf("price-99\n");
break;
case 2:
printf("food item- pasta\n");
printf("price-179\n");
break;
case 3:
printf("food item- sandwich\n");
printf("price-149\n");
break;
case 4:
printf("food item- burger\n");
printf("price-129\n");
break;
case 5:
printf("food item- pizza\n");
printf("price-239\n");
break;
default:
printf("you did not pick a valid choice\n");
}
return 0;
}




